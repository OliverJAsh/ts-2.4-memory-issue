{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,

        // AsyncIterable support
        "lib": [
            "esnext"
        ],
        "outDir": "./target",
        "allowSyntheticDefaultImports": true,
        "allowJs": true
    },
    "include": [
        "./src/routes.ts"
    ]
}
